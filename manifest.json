{
  "manifest_version": 2,

  "name": "Highlighter",
  "description": "Highlight any thing with this",
  "version": "1.0",
	
	"offline_enabled":true,
	
	"browser_action":{
		"default_icon":"butterfly1.png",
        "default_popup":"popup.html"
	},
	
	"icons":{
		"128":"butterfly3.png",
		 "48":"butterfly2.png",
		 "16":"butterfly1.png"
	},
		
	"permissions":[
		"contextMenus",
		"tabs"
	],

    "content_scripts": [
    {
        "matches":["<all_urls>"],
        "js": ["jquery-2.0.1.min.js","inj.js"]
        }
     ]
}
